<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml"
      spacing="20" style="-fx-padding: 20;" prefWidth="1200" prefHeight="700">

    <!-- Emergency Alert -->
    <HBox style="-fx-background-color: #ffe5e5; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #ffcccc; -fx-border-radius: 10;">
        <Label text="âš  For immediate emergencies, call:\nNepal Police: 100 | Tourist Police: +977-1-4247041"
               style="-fx-text-fill: #d32f2f; -fx-font-weight: bold;" wrapText="true" />
    </HBox>

    <!-- Main Content -->
    <HBox spacing="20" alignment="TOP_CENTER">
        <!-- Left Column: Emergency Contacts -->
        <VBox spacing="10" prefWidth="500" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #e0e0e0;">
            <Label text="Emergency Contacts" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="Important numbers for your safety" style="-fx-text-fill: #999;" />

            <!-- Contacts -->
            <VBox spacing="10">
                <VBox spacing="5" style="-fx-background-color: #fafafa; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Nepal Police" style="-fx-font-weight: bold;" />
                    <Label text="Emergency: 100" />
                </VBox>

                <VBox spacing="5" style="-fx-background-color: #fafafa; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Tourist Police" style="-fx-font-weight: bold;" />
                    <Label text="+977-1-4247041" />
                </VBox>

                <VBox spacing="5" style="-fx-background-color: #fafafa; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Himalayan Rescue Association" style="-fx-font-weight: bold;" />
                    <Label text="+977-1-4440292" />
                </VBox>
            </VBox>
        </VBox>

        <!-- Right Column: Safety Tips -->
        <VBox spacing="10" prefWidth="500" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-border-color: #e0e0e0;">
            <Label text="Safety Tips" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="Stay safe during your adventures" style="-fx-text-fill: #999;" />

            <!-- Tips -->
            <VBox spacing="10">
                <VBox spacing="5" style="-fx-background-color: #e8f0ff; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="High Altitude" style="-fx-text-fill: #1a73e8; -fx-font-weight: bold;" />
                    <Label text="Acclimatize properly above 3,000m" />
                </VBox>

                <VBox spacing="5" style="-fx-background-color: #e6f4ea; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Weather" style="-fx-text-fill: #188038; -fx-font-weight: bold;" />
                    <Label text="Check weather conditions before trekking" />
                </VBox>

                <VBox spacing="5" style="-fx-background-color: #fef7e0; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Communication" style="-fx-text-fill: #d93025; -fx-font-weight: bold;" />
                    <Label text="Keep emergency contacts updated" />
                </VBox>
            </VBox>
        </VBox>
    </HBox>
</VBox>
